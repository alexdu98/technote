{% extends "templates/base.twig" %}
{% block contenu %}

<div class="row">	
	<form class="col-lg-offset-4 col-lg-4 form-horizontal" name="recherche">
		<div class="form-group">
			<label class="col-sm-2 control-label" for="mot_clefs">Mot-clés</label>
			<div class="col-sm-10">
				<select name="id_mot_cle[]" class="form-control" id="mots-cles" multiple="multiple">
					{% for motCle in motsCles %}
						<option value="{{ motCle.id_mot_cle }}" {% if motCle.id_mot_cle in post.id_mot_cle %}selected{% endif %}>{{ motCle.label }}</option>
					{% endfor %}
				</select>
			</div>
		</div>
		<script>
			$(document).ready(function() {
				$('#mots-cles').multiselect({
					buttonWidth: '100%',
					nonSelectedText: 'Aucun mot-clé sélectionné',
					nSelectedText: ' mots-clés sélectionnés',
					filterPlaceholder: 'Rechercher un mot-clé',
					enableFiltering: true,
					maxHeight: 400,
					dropDown: true
				});
			});
		</script>
		<div class="form-group">
			<label class="col-sm-2 control-label" for="auteurs">Auteurs</label>
			<div class="col-sm-10">
				<select name="id_auteurs[]" class="form-control" id="auteurs" multiple="multiple">
					{% for auteur in auteurs %}
						<option value="{{ auteur.id_membre }}" {% if auteur.id_membre in post.id_membre %}selected{% endif %}>{{ auteur.pseudo }}</option>
					{% endfor %}
				</select>
			</div>
		</div>
		<script>
			$(document).ready(function() {
				$('#auteurs').multiselect({
					buttonWidth: '100%',
					nonSelectedText: 'Aucun auteur sélectionné',
					nSelectedText: 'auteurs sélectionnés',
					filterPlaceholder: 'Rechercher un auteur',
					enableFiltering: true,
					maxHeight: 400,
					dropDown: true
				});
			});
		</script>
		<div class="form-group">
	    	<div class="col-sm-offset-2 col-sm-10">
	      		<button type="submit" class="btn btn-default">Rechercher</button>
	    	</div>
	  	</div>
	</form>
</div>
{% include 'templates/pagination.twig' %}
{% include 'templates/technotesExtraits.twig' %}
{% include 'templates/pagination.twig' %}
{% endblock %}