{% extends "templates/base.twig" %}
{% block contenu %}
	<section class="row">
		<div class="panel panel-default">
			<div class="panel-body">
				{{ technote.contenu | raw }}
				<hr>
				<div>
					{% for motCle in technote.motsCles %}
						<a href="motscles/get/{{ motCle.id_mot_cle }}">{{ motCle.label }}</a>
					{% endfor %}
				</div>
				<div class="text-right">
					créé par <a href="#">{{ technote.auteur }}</a> le {{ technote.date_creation | date('d/m/Y à H:i') }}
					{% if technote.date_modification %}
						<br>
						modifié par <a href="#">{{ technote.modificateur }}</a> le {{ technote.date_modification | date('d/m/Y à H:i') }}
					{% endif %}
				</div>
			</div>
		</div>
		<hr>
		<h4 class="text-center">Commentaires</h4>
		<div class="col-md-offset-2 col-md-8">
			<div class="panel panel-default">
				<div class="panel-body">
					{% include 'templates/messages.twig' %}
					{% if technote.commentaires %}
						<div id="divCommentaires">
							{% include 'templates/commentaire.twig' with {'commentaires': technote.commentaires} %}
						</div>
					{% endif %}
					{% if session.user %}
						<div>
							<form method="POST" action="/commentaires/add/" class="form-horizontal" name="commentaire">
								<div class="form-group">
									<label for="commentaire" class="col-sm-2 control-label">Commentaire*</label>
									<div class="col-sm-10">
										<textarea class="form-control" rows="3" name="commentaire" id="commentaire" placeholder="Commentaire" maxlength="2047" required>{{ post.commentaire }}</textarea>
									</div>
								</div>
								<div class="form-group">
									<div class="col-sm-offset-2 col-sm-10">
										<input type="submit" class="btn btn-default" value="Envoyer">
									</div>
								</div>
								<input type="hidden" name="id_technote" value="{{ technote.id_technote }}">
								<input type="hidden" name="jetonCSRF" value="{{ session.jetonCSRF }}">
							</form>
						</div>
					{% else %}
						<div class="alert alert-info" role="alert">
							<div class="flex">
								<span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
								<ul>
									<li>Vous devez être connecté pour laisser un commentaire</li>
								</ul>
							</div>
						</div>
					{% endif %}
				</div>
			</div>
		</div>
	</section>
{% endblock %}